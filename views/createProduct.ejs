<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel</title>
    <!-- Include Tailwind CSS CDN -->
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <style>
      .hidden {
        display: none;
      }
    </style>
  </head>
  <body class="bg-gray-300 font-sans">
    <div class="min-h-screen flex items-center justify-center">
      <div class="bg-white p-8 rounded-lg shadow-lg max-w-md w-full">
        <h1 class="text-3xl font-semibold text-center mb-6">Create Product</h1>
        <% if (success) { %>
        <div
          id="successMessage"
          class="bg-green-500 text-white p-3 rounded mb-4"
        >
          Product created successfully!
        </div>
        <% } %>
        <form action="/api/admin/create-product" method="POST" class="space-y-4">
          <div>
            <input
              type="text"
              name="name"
              placeholder="Product Name"
              class="w-full px-4 py-2 border rounded-md focus:ring-blue-500 focus:border-blue-500"
              required
            />
          </div>
          <div>
            <input
              type="number"
              name="price"
              placeholder="Price"
              class="w-full px-4 py-2 border rounded-md focus:ring-blue-500 focus:border-blue-500"
              required
            />
          </div>
          <div>
            <textarea
              name="description"
              placeholder="Description"
              class="w-full px-4 py-2 border rounded-md focus:ring-blue-500 focus:border-blue-500"
            ></textarea>
          </div>
          <div>
            <input
              type="text"
              name="category"
              placeholder="Category"
              class="w-full px-4 py-2 border rounded-md focus:ring-blue-500 focus:border-blue-500"
            />
          </div>
          <div class="flex items-center">
            <input
              type="checkbox"
              name="isAvailable"
              id="isAvailable"
              class="mr-2"
            />
            <label for="isAvailable" class="text-gray-700">Available</label>
          </div>
          <div>
            <input
              type="number"
              name="discount"
              placeholder="Discount"
              class="w-full px-4 py-2 border rounded-md focus:ring-blue-500 focus:border-blue-500"
            />
          </div>
          <div>
            <input
              type="text"
              name="imageUrl"
              placeholder="Image URL"
              class="w-full px-4 py-2 border rounded-md focus:ring-blue-500 focus:border-blue-500"
              required
            />
          </div>
          <div>
            <button
              type="submit"
              class="w-full bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 transition duration-300"
            >
              Create Product
            </button>
          </div>
        </form>
      </div>
    </div>

    <!-- JavaScript to hide the success message after 2 seconds -->
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const successMessage = document.getElementById("successMessage");
        if (successMessage) {
          setTimeout(() => {
            successMessage.classList.add("hidden");
          }, 2000);
        }
      });
    </script>
  </body>
</html>
